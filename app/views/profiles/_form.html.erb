<div class="profile_new">
  <div class="profile_new_cont_box">
    <%= form_for(@profile) do |f| %>

      <div class="profile_new_name">
        <%= f.label "name" %><br>
        <%= f.text_field :user_name %>
      </div>
      <div class="profile_new_gender">
        <%= f.label "gender" %><br>
        <%= f.collection_select :sex_id, Sex.all, :id, :group %>
     </div>

        <div class="profile_new_self">
          <%= f.label "your self introduction" %><br>
          <%= f.text_area :self_introduction, :size => "30x10"%>
        </div>

        <div class="field">
        <div class="profile_new_photoname"
        <%= f.label "photo" %><br>
        </div>
        <div class="profile_newphoto">
          <%= f.file_field :photo %>
        </div>
        </div>

        <div class="profile_new_submitbutan">
          <%= f.submit "送信", class: "btn btn-primary" %>
        </div>
      <% end %>
  </div>
</div>
