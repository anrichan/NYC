<div class="article_show_new_comment_contents">
  <div class="col-sm-8　col-sm-4 control-label col-sm-7">
      <%= form_for([@article, @comment]) do |f| %>

        <div class="form-group">
          <%= f.label :comment_title %>
          <%= f.text_field :comment_title, class: "form-control" %>
          </div>

        <div class="form-group"> 
          <%= f.label :comment_discription, class: "col-sm-3 control-label" %>
          <%= f.text_area :comment_discription, class: "form-control", rows: 6 %>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-10">
            <%= f.submit "送信", :class => "btn btn-default" %>
          </div>
        </div>
      <% end %>
  </div>
</div>









