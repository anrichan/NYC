<div class="article_show_new_comment_contents">
  <div class="col-sm-8　col-sm-4 control-label col-sm-7">
      <%= form_for([@article, @comment]) do |f| %>

        <div class="form-group comment_title">
          <%= f.label :comment_title %>
          <%= f.text_field :comment_title, class: "form-control" %>
          </div>

        <div class="form-group comment_discription"> 
          
          <%= f.text_area :comment_discription, class: "form-control" %>
        </div>
        
        <div class="form-group　coment_btm">
          <div class="coment_btm">
            <%= f.submit "送信", :class => "btn btn-primary" %>
          </div>
        </div>
      <% end %>
  </div>
</div>









