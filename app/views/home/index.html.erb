    <div class="home_profile_icon">
      <%  if admin_signed_in? %>
        <%=link_to new_adminprofile_path(@adminprofile) do %>
          <i class="fa fa-address-card-o fa-4x" aria-hidden="true"></i>
          <p>admin</p>

          <% end %>
      <% end %>
    </div>
    <% if @profile.nil? %>
    <% if user_signed_in? %>
      <div class="article_show_comment_contents_backbt">
        <%= link_to  articles_path do %>
          <button type="button" class="btn btn-default">Back</button>
        <% end %>
        <% end %>
      </div>

    <% else %>
    <div class="home_profile_icon">
      <% if user_signed_in? %>
        <%=link_to new_profile_path(@profile) do %>
       <i class="fa fa-user-plus fa-4x" aria-hidden="true"></i>
       <p>Please make it　your Profile</p>
          <% end %>
      <% end %>
    </div>
<% end %>
